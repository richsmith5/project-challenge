<section>
  <h2><%= @dog.name %></h2>

  <% @dog.images.each do |image| %>
    <%= image_tag url_for(image), class: "dog-photo", alt: "Photo of #{@dog.name}" %>
  <% end %>

  <p><%= @dog.description %></p>
  <p><%= @dog.likes.count %> <%= "Like".pluralize(@dog.likes.count)%></p>

  <% if @dog.user_id != current_user.id %>
    <% user_has_liked = @dog.likes.find { |like| like.user == current_user} %>
    <% if user_has_liked %>
      <%= button_to 'Unlike', dog_like_path(@dog, user_has_liked), method: :delete %>
    <% else %>
      <%= button_to 'Like', dog_likes_path(@dog), method: :post %>
    <% end %>
  <% end %>

  <% if @dog.user_id == current_user.id %>
    <%= link_to "Edit #{@dog.name}'s Profile", edit_dog_path %>
    <br>
    <%= link_to "Delete #{@dog.name}'s Profile", dog_path, method: :delete, data: { confirm: 'Are you sure?' } %>
  <% end %>
</section>
