<section>
  <h2><%= @dog.name %></h2>

  <% @dog.images.each do |image| %>
    <%= image_tag url_for(image), size:"300x300", alt: "Photo of #{@dog.name}" %>
  <% end %>

  <p><%= @dog.description %></p>
  <p><%= @dog.likes.count %> <%= (@dog.likes.count) == 1 ? 'Like' : 'Likes'%></p>

  <% user_unlike = @dog.likes.find { |like| like.user_id == current_user.id} %>
  <% if user_unlike %>
    <%= button_to 'Unlike', dog_like_path(@dog, user_unlike), method: :delete %>
  <% else %>
    <%= button_to 'Like', dog_likes_path(@dog), method: :post %>
  <% end %>

  <% if @dog.user_id == current_user.id %>
    <%= link_to "Edit #{@dog.name}'s Profile", edit_dog_path %>
    <br>
    <%= link_to "Delete #{@dog.name}'s Profile", dog_path, method: :delete, data: { confirm: 'Are you sure?' } %>
  <% end %>
</section>
